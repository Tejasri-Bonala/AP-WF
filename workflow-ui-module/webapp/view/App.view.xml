<mvc:View controllerName="com.aperam.workflowuimodule.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:uxap="sap.uxap"
    xmlns:suite="sap.suite.ui.commons"
    xmlns="sap.m">
    <App>
        <uxap:ObjectPageLayout id="objectPageLayout" showTitleInHeaderContent="false">
            <uxap:headerTitle>
                <uxap:ObjectPageHeader objectTitle="Order Confirmation" objectSubtitle="A new order has been received. Please review and confirm whether the requirements can be met or not." />
            </uxap:headerTitle>
            <uxap:sections>
                <uxap:ObjectPageSection id="information">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection id="infoSubSection" title="Request Information">
                            <uxap:blocks>
                                <VBox>
                                    <!-- General Information Section -->
                                    <Panel headerText="General Information" width="100%">
                                        <form:SimpleForm editable="false" width="100%">
                                            <form:content>
                                                <Label text="Project Number" />
                                                <Input id="projectNumber1" value="{context>/projectNumber}" width="50%" editable="false" />

                                                <Label text="CTO Label" />
                                                <Input id="ctoLabel1" value="{context>/cto_label}" width="50%" editable="false" />

                                                <Label text="Project Maturity" />
                                                <Input id="projectMaturity1" value="{context>/project_maturity}" width="50%" editable="false" />
                                            </form:content>
                                        </form:SimpleForm>
                                    </Panel>
                                    <!-- Financial Information Section -->
                                   <Panel headerText="Financial Information" width="100%">
  <form:SimpleForm editable="false" width="100%">
    <form:content>
      <Label text="Title" />
      <Input id="title1" value="{context>/title}" width="50%" editable="false" />

      <Label text="Accounting Type" />
      <Input id="accountingType1" value="{context>/accounting_type}" width="50%" editable="false" />

      <Label text="Currency" />
      <Input id="currency1" value="{context>/currency}" width="50%" editable="false" />

      <Label text="Forex (vs â‚¬)" />
      <Input id="forex1" value="{context>/forex}" width="50%" editable="false" />
    </form:content>
  </form:SimpleForm>
</Panel>

<!-- Project Details Section -->
<Panel headerText="Project Details" width="100%">
  <form:SimpleForm editable="false" width="100%">
    <form:content>
      <Label text="Perimeter" />
      <Input id="perimeter1" value="{context>/perimeter}" width="50%" editable="false" />

      <Label text="Plant" />
      <Input id="plant1" value="{context>/plant}" width="50%" editable="false" />

      <Label text="Capex" visible="{= ${context>/accounting_type} === 'Capex' || ${context>/accounting_type} === 'Capex/Opex'}" />
      <Input id="capex1" value="{context>/capex}" width="50%" editable="false" visible="{= ${context>/accounting_type} === 'Capex' || ${context>/accounting_type} === 'Capex/Opex'}" />

      <Label text="Opex" visible="{= ${context>/accounting_type} === 'Opex' || ${context>/accounting_type} === 'Capex/Opex'}" />
      <Input id="opex1" value="{context>/opex}" width="50%" editable="false" visible="{= ${context>/accounting_type} === 'Opex' || ${context>/accounting_type} === 'Capex/Opex'}" />

      <Label text="Lease" visible="{= ${context>/accounting_type} === 'Lease'}" />
      <Input id="lease1" value="{context>/lease}" width="50%" editable="false" visible="{= ${context>/accounting_type} === 'Lease'}" />
    </form:content>
  </form:SimpleForm>
</Panel>


                                    <!-- Categories Section -->
                                    <Panel headerText="Categories" width="100%">
                                        <form:SimpleForm editable="false" width="100%">
                                            <form:content>
                                                <Label text="Categories" />
                                                <Input id="categories1" value="{context>/categories}" width="50%" editable="false" />

                                                <Label text="Year N" />
                                                <Input id="yearN" value="{context>/year}" width="50%" editable="false" />
                                            </form:content>
                                        </form:SimpleForm>
                                    </Panel>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
                <uxap:ObjectPageSection id="workflowSection">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection id="workflowSubSection" title="Process Flow">
                            <uxap:blocks>
                                <VBox id="Process-wrapper" class="sapUiSmallMargin">
                                    <suite:ProcessFlow id="processflow1" scrollable="false" foldedCorners="true" nodePress="onNodePress" nodes="{stepsModel>/nodes}" lanes="{stepsModel>/lanes}">
                                        <suite:nodes>
                                            <suite:ProcessFlowNode laneId="{stepsModel>lane}" nodeId="{stepsModel>id}" title="{stepsModel>title}" titleAbbreviation="{stepsModel>names}" children="{stepsModel>children}" state="{stepsModel>state}" stateText="{stepsModel>stateText}" texts="{stepsModel>texts}" highlighted="{stepsModel>highlighted}" focused="{stepsModel>focused}" />
                                        </suite:nodes>
                                        <suite:lanes>
                                            <suite:ProcessFlowLaneHeader laneId="{stepsModel>laneId}" iconSrc="{stepsModel>iconSrc}" text="{stepsModel>text}" position="{stepsModel>position}" />
                                        </suite:lanes>
                                    </suite:ProcessFlow>
                                    <suite:ProcessFlow id="processflow2" scrollable="false" nodes="{pf2>/nodes}" lanes="{pf2>/lanes}" headerPress="onHeaderPress">
                                        <suite:nodes>
                                            <suite:ProcessFlowNode laneId="{pf2>lane}" nodeId="{pf2>id}" title="{pf2>title}" children="{pf2>children}" state="{pf2>state}" stateText="{pf2>stateText}" texts="{pf2>texts}" focused="{pf2>focused}" />
                                        </suite:nodes>
                                        <suite:lanes>
                                            <suite:ProcessFlowLaneHeader laneId="{pf2>laneId}" iconSrc="{pf2>iconSrc}" text="{pf2>text}" position="{pf2>position}" />
                                        </suite:lanes>
                                    </suite:ProcessFlow>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
                <uxap:ObjectPageSection id="commentsSection">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection id="commentsSubSectionFeedback" title="Feedback">
                            <uxap:blocks>
                                <VBox id="comment-wrapper" class="sapUiSmallMargin">
                                    <CheckBox id="Ack" text="I acknowledge that we have received your order and will process it based on the availability" />
                                    <FeedInput post="onPost"/>
                                    <List showSeparators="Inner" items="{Feed>/EntryCollection}">
                                        <FeedListItem sender="{Feed>Author}" info="{Feed>Type}" icon="{Feed>AuthorPicUrl}" timestamp="{Feed>Date}" text="{Feed>Text}" />
                                    </List>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
    </App>
</mvc:View>